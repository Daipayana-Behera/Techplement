@using QuoteOfTheDay.Models
@model Quotes
@{
    ViewBag.Title = "AddQuote";
}

<h2>AddQuote</h2>


@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}


<form method="post" action="/Quote/AddQuote">
    <div class="form-group">
        <label for="quoteText">Quote:</label>
        <textarea id="quoteText" name="quoteText" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label for="authorName">Author Name:</label>
        <input type="text" id="authorName" name="authorName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>


