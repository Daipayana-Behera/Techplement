@using QuoteOfTheDay.Models
@model Quotes
@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>Quote of the Day</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Quote of the Day</h1>
        <div class="quote mt-4">
            <blockquote class="blockquote text-center">
                <p>@Model.Quote</p>
                <footer class="blockquote-footer">@Model.Author</footer>
            </blockquote>
        </div>
        <hr />
        <div class="search mt-4">
            <h3>Search Quotes by Author</h3>
            <form action="/Home/Search" method="post">
                <div class="form-group">
                    <input type="text" name="authorName" placeholder="Enter author name" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Search</button>
            </form>
        </div>
        <div>
            @if (Session["Username"] != null)
            {
                <p>Welcome, @Session["Username"]!</p>
                <a href="/Quote/AddQuote" class="btn btn-primary">Add Quote and Author</a>
            }
            else
            {
                <p>Please <a href="/User/Login">login</a> to add quotes.</p>
            }
        </div>
    </div>
</body>
</html>

